<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/game_bg"
    android:padding="20dp"
    tools:context=".fragments.LevelChooseFragment">

    <Button
        android:id="@+id/first_lvl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#9AA8F4"
        android:text="1 уровень"
        android:textColor="#1C2C85"
        android:textSize="20sp" />

    <Button
        android:id="@+id/second_lvl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:backgroundTint="#9AA8F4"
        android:text="2 уровень"
        android:textColor="#1C2C85"
        android:textSize="20sp" />

    <Button
        android:id="@+id/third_lvl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:backgroundTint="#9AA8F4"
        android:text="3 уровень"
        android:textColor="#1C2C85"
        android:textSize="20sp" />

</LinearLayout>